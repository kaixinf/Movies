.login_btn{
  width: 100%;
  height: 500rpx;
  background: #5CC76D;
}
.btn{
  width: 60%;
  background: #fff;
  margin: 0 auto;
  border-radius: 52rpx;
  margin-top: 185rpx;

}
.userinfo, .uploader, .tunnel {
  height:100rpx;
}
.show{
  width: 60%;
  margin: 0 auto;
  margin-top: 135rpx;
  text-align: center;
}
.userinfo-nickname{
  color: #fff;
  background-color: transparent;
}
.userinfo-avatar{
  background-color: transparent;
}
.btn button{
  font-size: 45rpx;
  font-weight: normal;
}
/* 去掉button得默认样式 */
button::after {
  border: none; 
}
/* 我的电影 */
.details{
  padding: 30rpx;
  box-sizing: border-box;
}
.mine_d{
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.mine_d image{
  vertical-align: middle;
  width: 35rpx;
  height: 35rpx;
}
.looking{
  display: flex;
  margin-top: 30rpx;
}
.left{
  margin-top: 63rpx;

  width: 10%;
}
.left image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}
.right{
  width: 90%;
  
}
.box{
  padding-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #e5e5e5;
}
.r_ll{
  width: 30%;
}
.r_rr{
  width: 70%;
  display: flex;
}
.r_ll view:nth-of-type(1){
  font-weight: 400;
  font-size: 33rpx;
  line-height: 50rpx;
}
.r_ll view:nth-of-type(2){
  padding-top: 35rpx;

  color: #666;
}
.r_ll view:nth-of-type(2) text{
  font-size: 60rpx;
  margin-top: 34rpx;
  padding-right: 10rpx;
  box-sizing: border-box;

}
.r_cc{
  font-size: 33rpx;
width: 50%;
margin-top: 45rpx;

line-height: 55rpx;

  color: #ccc;
}
.r_dd{
  width: 50%;
  line-height: 95rpx;
  margin-top: 40rpx;
}
.r_dd text{
  font-size: 33rpx;
  padding: 20rpx 20rpx;
  background: #F5F5F5;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.r_dd image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}